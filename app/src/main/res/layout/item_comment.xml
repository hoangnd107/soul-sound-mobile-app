<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:paddingEnd="20dp"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:layout_marginVertical="5dp">
<!--    <ImageView-->
<!--        android:id="@+id/ivUserAvatar"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:background="@drawable/bg_circle"-->
<!--        />-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siUserAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:shapeAppearanceOverlay="@style/circula"
        app:srcCompat="@drawable/img_kpop"
        android:padding="5dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp">
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vũ Bá Thắng"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài hát này hay quá, tôi muốn nghe bài này nhiều lần nữa, chúc ca sĩ nhiều sức khỏe"/>

    </LinearLayout>
</LinearLayout>