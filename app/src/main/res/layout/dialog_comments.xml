<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment of track"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivClose"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close"
            android:backgroundTintMode="screen"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="355dp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:shapeAppearanceOverlay="@style/circula"
            app:srcCompat="@drawable/kpop"
            android:padding="5dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toEndOf="@id/siAvatar"
            android:layout_toStartOf="@id/ibSend"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_edittext_rounded"
            android:layout_marginHorizontal="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            />

        <ImageButton
            android:id="@+id/ibSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:backgroundTintMode="screen"/>
    </RelativeLayout>
</LinearLayout>