<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_resetpw"
    tools:context=".activity.SleepTimerActivity">

    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/tvStopAudioIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop audio in"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvEndOfTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End of Track"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv60sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60 seconds"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv5min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="5 minutes"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv10min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="10 minutes"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv15min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="15 minutes"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv30min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="30 minutes"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv1h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="1 hour"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>